/var/log/varnish/varnish.log {
  daily
  rotate 7
  missingok
  compress
  delaycompress
  missingok
  postrotate
    /bin/kill -HUP `cat /var/run/varnishlog.pid /run/varnishlog/varnishlog.pid 2>/dev/null` 2> /dev/null || true
  endscript
}

